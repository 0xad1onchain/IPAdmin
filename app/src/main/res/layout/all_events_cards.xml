<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tit_rec"
            android:text="title "
            android:textSize="28sp"
            android:textStyle="bold"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="8dp"/>

        <TextView
            android:layout_below="@id/tit_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:id="@+id/desc_rec"
            android:text="desc "
            android:textSize="18sp"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_below="@id/desc_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_rec"
            android:textSize="18sp"
            android:text="date"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_below="@id/date_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            android:paddingRight="12dp"
            android:textSize="18sp"
            android:text="eligibility"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_below="@id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eligibility_rec"
            android:paddingRight="12dp"
            android:textSize="18sp"
            android:text="eligibility"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_below="@id/eligibility_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:paddingRight="12dp"
            android:textSize="18sp"
            android:text="eligibility"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_below="@id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_rec"
            android:text="contact"
            android:textSize="18sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />

        <TextView
            android:layout_below="@id/contact_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone_rec"
            android:text="Phone"
            android:textSize="18sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />

        <TextView
            android:layout_below="@id/phone_rec"
            android:text="Payment Mode"
            android:textSize="18sp"
            android:id="@+id/paymentMode_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>

        <TextView
            android:layout_below="@id/paymentMode_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Price"
            android:textSize="18sp"
            android:id="@+id/price"/>

        <ImageButton
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:id="@+id/edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/text_grey"
            android:src="@drawable/ic_mode_edit_black_48dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:tint="@color/text_grey"
            android:id="@+id/delete"
            android:background="@null"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/edit"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_delete_black_48dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitCenter"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>